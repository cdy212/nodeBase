{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "node":true
    },
    "extends": [ "airbnb", "airbnb/hooks"] ,
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "parserOptions": {
        "ecmaVersion": 11
    }
}